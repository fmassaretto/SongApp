<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SongApp.Views.AddSongPage"
             Title="{Binding Title}">
    <ScrollView>
        <StackLayout>
            <Entry Text="{Binding Name}" Placeholder="Name"/>
            <Entry Text="{Binding Artist}" Placeholder="Artist"/>
            <Entry Text="{Binding Composer}" Placeholder="Composer"/>
            <Entry Text="{Binding Album}" Placeholder="Album"/>
            <Entry Text="{Binding Genre}" Placeholder="Genre"/>
            <Entry Text="{Binding TotalTime}" Placeholder="Total Time"/>
            <Entry Text="{Binding TrackNumber}" Placeholder="Track Number"/>
            <Entry Text="{Binding Year}" Placeholder="Year"/>
            <Entry Text="{Binding BitRate}" Placeholder="BitRate"/>
            <Button Text="Add Song" Command="{Binding AddSongCommand}"
                    Margin="10"/>
        </StackLayout>
    </ScrollView>
</ContentPage>